<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu1_Plans">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Dynamic ToolBar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/MainMenu_ActivityAppbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:elevation="0dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/MainMenu_ActivityToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:contentDescription="Back Button"
                        android:focusable="true"
                        android:onClick="ToolbarBackButton_OnClick"
                        android:padding="5dp"
                        android:src="@drawable/toolbar_backbutton" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="5" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:contentDescription="Search Button"
                        android:focusable="true"
                        android:padding="5dp"
                        android:src="@drawable/toolbar_searchbutton" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:contentDescription="Menu Button"
                        android:focusable="true"
                        android:padding="5dp"
                        android:src="@drawable/toolbar_menubutton" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Activity List RecyclerView -->

        <!-- Add New Activity Button -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainMenu_PlanListID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"></androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnNewActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="btnNewPlan"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/list_addbutton_24dp_white" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>