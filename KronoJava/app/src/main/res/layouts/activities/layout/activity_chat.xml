<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Menu ToolBar -->
    <include
        android:id="@+id/menu0_toolbar"
        layout="@layout/menu0_toolbar">
    </include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Chat_MessageListID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" />

    <!-- A horizontal line between the RecyclerView and the message box -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf" />

    <LinearLayout
        android:id="@+id/Chat_MessageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="48dp"
        android:background="#ffffff"
        android:layout_gravity="bottom">

    <EditText
        android:id="@+id/Chat_EditMessage"
        android:hint="Enter message"
        android:background="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:maxLines="6"/>

    <Button
        android:id="@+id/Chat_SendMessageButton"
        android:text="SEND"
        android:textSize="14dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_gravity="bottom"/>

    </LinearLayout>
</LinearLayout>