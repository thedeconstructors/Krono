<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_plans">

    <fragment
        android:id="@+id/nav_plans"
        android:name="com.deconstructors.krono.ui.PlanFragment"
        android:label="@string/collection_plans"
        tools:layout="@layout/ui_plan">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second"/>
        <action
            android:id="@+id/Plan_to_Activity"
            app:destination="@id/nav_activities"/>
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.deconstructors.krono.HomeSecondFragment"
        android:label="home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_plans" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/nav_activities"
        android:name="com.deconstructors.krono.ui.ActivityFragment"
        android:label="@string/collection_activities"
        tools:layout="@layout/ui_activity">
    </fragment>
    <fragment
        android:id="@+id/nav_friends"
        android:name="com.deconstructors.krono.ui.FriendFragment"
        android:label="@string/collection_friends"
        tools:layout="@layout/ui_friend">
    </fragment>
    <!--<fragment
        android:id="@+id/nav_activity"
        android:name="com.demo.fragmentdemo.ui.AllActivityFragment"
        android:label="@string/collection_activities"
        tools:layout="@layout/ui_activity" />-->
</navigation>