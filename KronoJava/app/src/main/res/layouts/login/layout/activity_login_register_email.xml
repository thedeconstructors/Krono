<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginEmailPassRegister">

    <TextView
        android:id="@+id/first_name_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/first_name"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/first_name_prompt"
        app:layout_constraintLeft_toRightOf="@+id/first_name_prompt" />

    <TextView
        android:id="@+id/last_name_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        app:layout_constraintTop_toBottomOf="@id/first_name_prompt"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/last_name"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/last_name_prompt"
        app:layout_constraintLeft_toRightOf="@+id/last_name_prompt" />


    <Button
        android:id="@+id/email_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:onClick="registerEmailOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>