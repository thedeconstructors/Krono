<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="10"
    tools:context=".activities.MainActivity">

    <!-- Background -->
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_title"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
    </RelativeLayout>

    <!-- Grid Layout of Card Items -->
    <GridLayout
        android:id="@+id/mainGrid"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp">

        <!-- Row 1 Column 1 -->
        <androidx.cardview.widget.CardView style="@style/MainMenu_CardView_Style">
            <TextView style="@style/MainMenu_TextView_Style"
                android:drawableTop="@drawable/menuitem0"
                android:text="@string/MenuItem0" />
        </androidx.cardview.widget.CardView>

        <!-- Row 1 Column 2 -->
        <androidx.cardview.widget.CardView style="@style/MainMenu_CardView_Style">
            <TextView style="@style/MainMenu_TextView_Style"
                android:drawableTop="@drawable/menuitem1"
                android:text="@string/MenuItem1" />
        </androidx.cardview.widget.CardView>

        <!-- Row 2 Column 1 -->
        <androidx.cardview.widget.CardView style="@style/MainMenu_CardView_Style">
            <TextView style="@style/MainMenu_TextView_Style"
                android:drawableTop="@drawable/menuitem2"
                android:text="@string/MenuItem2" />
        </androidx.cardview.widget.CardView>

        <!-- Row 2 Column 2 -->
        <androidx.cardview.widget.CardView style="@style/MainMenu_CardView_Style">
            <TextView style="@style/MainMenu_TextView_Style"
                android:drawableTop="@drawable/menuitem3"
                android:text="@string/MenuItem3" />
        </androidx.cardview.widget.CardView>

        <!-- Row 3 Column 1 -->
        <androidx.cardview.widget.CardView style="@style/MainMenu_CardView_Style">
            <TextView style="@style/MainMenu_TextView_Style"
                android:drawableTop="@drawable/menuitem4"
                android:text="@string/MenuItem4" />
        </androidx.cardview.widget.CardView>

        <!-- Row 3 Column 2 -->
        <androidx.cardview.widget.CardView style="@style/MainMenu_CardView_Style">
            <TextView style="@style/MainMenu_TextView_Style"
                android:drawableTop="@drawable/menuitem5"
                android:text="Logout"
                android:textColor="@color/red"/>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</LinearLayout>