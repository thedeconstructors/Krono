<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ViewPlan_ViewPlanTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Details"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ViewPlan_lblTitle"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="Title"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/ViewPlan_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_weight="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ViewPlan_lblDescription"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textAlignment="textEnd"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/ViewPlan_Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ViewPlan_lblStartTime"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textAlignment="textEnd"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/ViewPlan_StartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/ViewPlan_lblMyActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Activities"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ViewPlan_recyclerActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu0_activities_removeplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="DeletePlanOnClick"
        app:srcCompat="@drawable/remove_24px" />
</LinearLayout>