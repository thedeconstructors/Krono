<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="horizontal"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_skipCollapsed="true"
    app:behavior_peekHeight="0dp"
    android:clipToPadding="true"
    android:padding="5dp"
    android:id="@+id/FriendPageNew_BottomSheet">

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:id="@+id/FriendPageNew_SearchText"
        android:hint="@string/friendnew_hint"
        android:inputType="textEmailSubject"
        android:importantForAutofill="no"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/friendnew_done"
        android:src="@drawable/ui_activity_done"
        android:id="@+id/FriendPageNew_SearchButton" />

</LinearLayout>